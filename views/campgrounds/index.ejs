<% layout('layouts/boilerplate')%>
 <link
  href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap"
  rel="stylesheet"
/>
<style>
   
    #glass-object {
    border-radius: 25px;
    backdrop-filter: blur(23.8px);
    padding: 2rem;
    box-shadow: 0 2px 10px rgb(0 0 0 / 10%), 0 10px 15px rgb(0 0 0 / 20%);
    box-sizing: border-box;
    background-image: linear-gradient(45deg, rgba(255,255,255,0.20), rgba(255,255,255,0.20));
    width: 100%;
    min-height: 70px;
    mix-blend-mode: hard-light;
    color:black;
}


</style>
<h1 style="text-align: center;">All Camps</h1>
<div class="d-grid gap-2">
    <a href="/campgrounds/new" class="btn btn-warning mb-3" style="font-size:120%;">Add Camps</a>
</div>
<% for (let campground of campgrounds){%>
<div class="card-body" id="glass-container" >
    <div class="row" id="text-layer">
        <div class="col-md-5" >
            <img class="img-fluid" alt="" src="<%=campground.image%> " style="border-radius:25px;">
        </div>
        <div class="col-md-7">
            <div class="card-body" id="glass-object">
                <h3 class="card-title"><%= campground.title %> </h3>
                <p class="card-text" style="font-size:110%;font-weight: 600;"><%= campground.description %></p>
                <p class="card-text">
                    Location: <strong> <%= campground.location%> </strong>
                </p>
                <a class="btn btn-primary" style=" background: rgb(6,14,131);
  background: linear-gradient(0deg, rgba(6,14,131,1) 0%, rgba(12,25,180,1) 100%);border: none;" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
                
            </div>
        </div>
        </div>
        
    </div>
</div>
<% }%>