<% layout('layouts/boilerplate')%>

<style>
  
  #glass-object {
    border-radius: 25px;
    backdrop-filter: blur(10px);
    padding: 2rem;
    box-shadow: 0 2px 10px rgb(0 0 0 / 10%), 0 10px 15px rgb(0 0 0 / 20%);
    box-sizing: border-box;
    background-image: linear-gradient(
      45deg,
      rgba(66, 60, 90, 0.6),
      rgba(66, 60, 90, 0.6)
    );
    width: 100%;
    height: 100%;
    mix-blend-mode: hard-light;
    color:black;
  }
  #text-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #glass-container {
    position: relative;
    width: 100%;
    height: 80px;
  }
  

  
</style>

<div class="row" style="text-transform: capitalize" id="glass-object">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3" style="font-size: large">
    <form action="/campgrounds" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="validationServer01">Title</label>
        <input
          class="form-control is-valid"
          type="text"
          id="validationServer01"
          name="campground[title]"
          style="background-color:black; color:rgb(239, 239, 141); border-radius: 25px;"
          required
        />
        <div class="invalid-feedback" style="color:rgb(112, 7, 7);">Title is missing</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="validationServer02">Location</label>
        <input
          class="form-control is-valid"
          type="text"
          id="validationServer02"
          name="campground[location]"
          style="background-color:black; color:rgb(239, 239, 141); border-radius: 25px;"
          required
        />
        <div class="invalid-feedback" style="color:rgb(112, 7, 7);">Location is missing</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="validationServer03">Image Url</label>
        <input
          class="form-control is-valid"
          type="text"
          id="image"
          name="campground[image]"
          style="background-color:rgb(0, 0, 0); color:rgb(239, 239, 141); border-radius: 25px;"
          required
        />
        <div class="invalid-feedback" style="color:rgb(112, 7, 7);">Image URL is missing</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="validationServer04"
          >Campground Price</label
        >
        <div class="input-group">
          <span class="input-group-text" id="price-label">&#8377;</span>
          <input
            type="text"
            class="form-control is-valid"
            id="validationServer04"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="campground[price]"
            style="background-color:black; color:rgb(239, 239, 141);"
            required
          />
        </div>
        <div class="invalid-feedback" >Price is missing</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          rows="5"
          id="description"
          name="campground[description]"
          style="background-color:black; color:rgb(239, 239, 141); border-radius: 25px;"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success" style="color:black">Add Campground</button>
      </div>
      <a href="/campgrounds" class="btn btn-danger" style="color:black">All Campgrounds</a>
    </form>
  </div>
</div>
